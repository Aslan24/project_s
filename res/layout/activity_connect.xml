<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.apple.mybluetootharduino.ConnectActivity">

    <Button
        android:id="@+id/search_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_search"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/connect_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect_net"
        android:layout_above="@id/search_button"/>
    <TextView
        android:id="@+id/text_show1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/connect_button"/>
    <ListView
        android:id="@+id/device_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/text_show1">
    </ListView>

</RelativeLayout>

